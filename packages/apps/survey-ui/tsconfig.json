{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2015",
    "jsx": "preserve",
    "strict": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@styles/*": ["./src/app/styles/*"]
    }
  },
  "include": [
    "./**/*",
    ".next/types/**/*.ts",
    "../../libs/hashing/hash-answer-id.test.ts",
    "../../libs/hashing/hash-answer-id.ts"
  ],
  "exclude": ["node_modules"]
}
